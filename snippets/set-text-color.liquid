{%- comment -%}
----------------------------------------------------------------------------------------------------------------------
Set Color
----------------------------------------------------------------------------------------------------------------------

Genera el color para el texto colocado

* class: class for element
  type: string
* text_color: color value
  type: color

{%- endcomment -%}

{%- liquid
  capture custom_class
    if text_color != blank and text_color != 'rgba(0,0,0,0)'
      echo 'text-custom-color ' | append: class
    else
      echo class
    endif
  endcapture

  capture style
    if text_color != blank and text_color != 'rgba(0,0,0,0)'
      echo '--color: ' | append: text_color | append: ';'
    endif
  endcapture
-%}

{% if custom_class != blank %}
  class="{{ custom_class }}" 
{% endif %}

{% if style != blank %}
  style="{{ style }}"
{% endif %}
